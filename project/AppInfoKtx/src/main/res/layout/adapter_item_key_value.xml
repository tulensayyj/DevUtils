<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/un_dp_15"
        android:background="@drawable/selector_bg_item_r3"
        android:orientation="vertical"
        android:padding="@dimen/un_dp_10">

        <TextView
            android:id="@+id/vid_aikv_key_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/vid_aikv_value_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/un_dp_3"
            android:textColor="@android:color/black"
            android:textSize="@dimen/un_sp_13" />
    </LinearLayout>
</LinearLayout>